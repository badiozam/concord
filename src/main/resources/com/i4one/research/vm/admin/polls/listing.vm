#macro( resultsButton $item )
	<form action="report.html">
		<input type="hidden" name="id" value="$item.ser"/>
		<input type="hidden" name="viewActivity" value="false"/>

		#set( $submitLabel = ${model.buildMessage('msg.research.admin.general.results')})
		#i4oneFormSubformSubmit($submitLabel)
	</form>
#end

<div class="row hidden-sm hidden-xs">
	<div class="heading col-md-1">#message('msg.base.admin.terminable.listing.starttime')</div>
	<div class="heading col-md-6">#message('msg.research.admin.polls.listing.poll.title')</div>
	<div class="heading col-md-2">#message('msg.base.admin.triggerable.listing.triggers')</div>
	<div class="heading col-md-1">#message('msg.base.admin.terminable.listing.endtime')</div>
	<div class="heading col-md-2"></div>
</div>
	
#foreach ( $item in $listing.items )
	#striping()
	<div class="row $rowClass">
		<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.terminable.listing.starttime')</div>
		<div class="col-sm-9 col-md-1">#formatDateTime(${item.startTime})</div>

		<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.research.admin.polls.listing.poll.title')</div>
		<div class="col-sm-9 col-md-6">#IString($item.title)</div>

		<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.triggerable.listing.triggers')</div>
		<div class="col-sm-9 col-md-2">#itemTriggers($item)</div>

		<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.terminable.listing.endtime')</div>
		<div class="col-sm-9 col-md-1">#formatDateTime(${item.endTime})</div>

		<div class="col-sm-12 col-md-2">
			#updateButton($item)
			#reportButton($item)
			#resultsButton($item)
			#cloneButton($item)
			#listingRemoveButton($item)
		</div>
	</div>
#end
