#set($title = ${model.buildMessage('msg.base.admin.balancetriggers.attach.pageTitle', 'attachment', $attachment)})
#parseVm( "base/admin/template/startHead.vm" )
#parseVm( "base/admin/template/endHead.vm" )
#parseVm( "base/admin/template/startBody.vm" )

<section id="crud">
	<form method="post" action="$request.requestURI" class="form">
		#springFormHiddenInput("attachment.feature.ser" "")
		#springFormHiddenInput("attachment.feature.tableName" "")
		#springFormHiddenInput("attachment.feature.schemaName" "")
		#springFormHiddenInput("attachment.redir" "")
		#springFormHiddenInput("attachment.displayName" "")
		<span id="jq_errors">#i4oneStatus("attachment")</span>

		<div class="form-group row">
			<div class="col-sm-12"><h3>#msgWithHelp('unattachedtriggers')</h3></div>
			<div class="col-sm-12">
				#if ( ${unattachedTriggers.isEmpty()} )
					#msg('noeligibletriggers')
				#else
					#springBind("attachment.balanceTriggers")
					#springShowErrors(" " "formFieldError")
					<div class="$springErrorClass">
						#i4oneFormCheckboxes("attachment.balanceTriggers" $unattachedTriggers '' '<div class="col-sm-4 col-md-2">' '</div><div class="col-sm-4 col-md-2">' '</div>')
					</div>
				#end
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-12"><h3>#msgWithHelp('attachedtriggers')</h3></div>
			<div class="col-sm-12">
				#foreach( $trigger in $attachment.balanceTriggers )
					#striping()

					<div class="row $rowClass">
						<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.general.triggerable.starttime')</div>
						<div class="col-sm-9 col-md-2">#formatDateTime($trigger.startTime)</div>

						<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.general.triggerable.title')</div>
						<div class="col-sm-9 col-md-3">#IString($trigger.title)</div>

						<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.general.triggerable.amount')</div>
						<div class="col-sm-9 col-md-3">$trigger.amount #IString(${trigger.balance.formatName($trigger.amount)})</div>

						<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.general.triggerable.endtime')</div>
						<div class="col-sm-9 col-md-2">#formatDateTime($trigger.endTime)</div>

						<div class="col-sm-12 col-md-2">#updateButtonHref($trigger "_blank")</div>
					</div>
				#end
			</div>
		</div>

		<div class="form-group row">
			#set( $submitLabel = ${model.buildMessage('msg.base.admin.balancetriggers.attach.submit')} )
			<div class="col-sm-6">#i4oneFormSubmit($submitLabel $attachment)</div>

			<div class="col-sm-6">#i4oneFormBack($attachment.redir)</div>
		</div>
	</form>
</section>

#parseVm( "base/admin/template/endBody.vm" )