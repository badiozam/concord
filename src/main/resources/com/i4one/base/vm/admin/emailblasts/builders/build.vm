#set($title = ${model.buildMessage('msg.base.admin.emailblasts.builders.build.pageTitle', 'item', $builder)})
#parseVm( "base/admin/template/startHead.vm" )
#parseVm( "base/admin/template/endHead.vm" )
#parseVm( "base/admin/template/startBody.vm" )

<div id="crud">
	<form method="post" action="$request.requestURI">
		#springFormHiddenInput("builder.ser" "")
		<span id="jq_errors">#i4oneStatus("builder")</span>

		<div class="form-group row">
			<div class="col-sm-4 col-md-2"><label for="title">#message('msg.base.admin.emailblasts.builders.update.title')</label></div>
			<div class="col-sm-8 col-md-10">#IString($builder.title)</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-12 col-md-2"><label for="fromAddress">#message('msg.base.admin.emailblasts.builders.update.from')</label></div>
			<div class="col-sm-12 col-md-10">$builder.fromAddress</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-12 col-md-2"><label for="subject">#message('msg.base.admin.emailblasts.builders.update.subject')</label></div>
			<div class="col-sm-12 col-md-10">#IString($builder.subject)</div>
		</div>

		#foreach ( $builderVar in $builder.htmlBuilderVariables )
			<div class="form-group row">
				#if ( $builderVar.type == "textarea" )
					#set( $builderVarName = "builder.savedState['" + $builderVar.fullName + "']")
					<div class="col-sm-12 col-md-2"><label>$builderVar.name</label></div>
					<div class="col-sm-12 col-md-10">#i4oneFormITextarea("$builderVarName" '' 'rows="8"')</div>
				#else #* ( $builderVar.type == "input" ) *#
					#set( $builderVarName = "builder.savedState['" + $builderVar.fullName + "']")
					<div class="col-sm-12 col-md-2"><label>$builderVar.name</label></div>
					<div class="col-sm-12 col-md-10">#i4oneFormIStringInput("$builderVarName" '' 'maxlength="1024"')</div>
				#end
			</div>
		#end

		<div class="form-group row">
			<div class="col-sm-4">
				<button class="btn btn-primary btn-block ladda-button" data-style="expand-left" name="build" type="submit">
					<span class="ladda-label">#msg('buildbutton')</span>
				</button>
			</div>
			<div class="col-sm-4">
				<button class="btn btn-default btn-block ladda-button" data-style="expand-left" name="save" type="submit">
					<span class="ladda-label">#msg('savebutton')</span>
				</button>
			</div>
			<div class="col-sm-4">#i4oneFormBack()</div>
		</div>
	</form>
</div>

#parseVm( "base/admin/template/endBody.vm" )