<div class="row hidden-sm hidden-xs">
	<div class="heading col-md-2">#message('msg.base.admin.terminable.listing.starttime')</div>
	<div class="heading col-md-4">#message('msg.base.admin.pages.listing.page.title')</div>
	<div class="heading col-md-2">#message('msg.base.admin.pages.listing.page.url')</div>
	<div class="heading col-md-2">#message('msg.base.admin.terminable.listing.endtime')</div>
	<div class="heading col-md-2"></div>
</div>
	
#foreach ( $item in $listing.items )
	#striping()
	<div class="row $rowClass">
		<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.terminable.listing.starttime')</div>
		<div class="col-sm-9 col-md-2">#formatDateTime(${item.startTime})</div>

		<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.pages.listing.page.title')</div>
		<div class="col-sm-9 col-md-4">#IString($item.title)</div>

		#set( $frontEndURL = "http://" + $model.singleClient.domain + "/" + $model.singleClient.name + "/" + $model.language + "/base/user/pages/" + $item.ser + ".html")
		<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.pages.listing.page.url')</div>
		<div class="col-sm-9 col-md-2"><a href="$frontEndURL" target="_blank">$frontEndURL</a> <span class="glyphicon glyphicon-new-window"></span></div>

		<div class="heading col-sm-3 visible-sm visible-xs">#message('msg.base.admin.terminable.listing.endtime')</div>
		<div class="col-sm-9 col-md-2">#formatDateTime(${item.endTime})</div>

		<div class="col-sm-12 col-md-2">
			#updateButton($item)
			#cloneButton($item)
			#listingRemoveButton($item)
		</div>
	</div>
#end
