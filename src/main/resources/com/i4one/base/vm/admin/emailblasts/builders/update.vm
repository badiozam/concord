#set($title = ${model.buildMessage('msg.base.admin.emailblasts.builders.update.pageTitle', 'item', $builder)})
#parseVm( "base/admin/template/startHead.vm" )
#parseVm( "base/admin/template/endHead.vm" )
#parseVm( "base/admin/template/startBody.vm" )

<div id="crud">
	<form method="post" action="$request.requestURI">
		#springFormHiddenInput("builder.ser" "")
		#springFormHiddenInput("builder.client" "")
		#springFormHiddenInput("builder.emailTemplate.ser" "")
		<span id="jq_errors">#i4oneStatus("builder")</span>

		<div class="form-group row">
			<div class="col-sm-4 col-md-2"><label for="title">#msgWithHelp('title')</label></div>
			<div class="col-sm-8 col-md-10">#i4oneFormIStringInput('builder.title' '' 'maxlength="128"')</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-12 col-md-2"><label for="fromAddress">#msgWithHelp('from')</label></div>
			<div class="col-sm-12 col-md-10">#i4oneFormIStringInput("builder.fromAddress" '' 'maxlength="256"')</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-12 col-md-2"><label for="subject">#msgWithHelp('subject')</label></div>
			<div class="col-sm-12 col-md-10">#i4oneFormIStringInput("builder.subject" '' 'maxlength="512"')</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-12 col-md-2"><label for="htmlBody">#msgWithHelp('htmlbody')</label></div>
			<div class="col-sm-12 col-md-10">
				#if ( $builder.exists )
				<div class="row">
					<div class="col-sm-12"><a class="btn btn-default btn-block btn-back" onClick="window.open('preview.html?id=' + $builder.ser, 'preview', 'status=0, toolbar=0, menubar=1, directories=0, height=800, width=700, scrollbars=1, resizable=1');">#msg('preview')</a></div>
				</div>
				#end
				#i4oneFormITextarea("builder.htmlBody" '' 'rows="8"')
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-12 col-md-2"><label for="textBody">#msgWithHelp('textbody')</label></div>
			<div class="col-sm-12 col-md-10">#i4oneFormITextarea("builder.textBody" '' 'rows="8"')</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-4">#i4oneFormUpdate($builder)</div>
			<div class="col-sm-4">#i4oneFormHistory($builder)</div>
			<div class="col-sm-4">#i4oneFormBack()</div>
		</div>
	</form>
</div>

#parseVm( "base/admin/template/endBody.vm" )